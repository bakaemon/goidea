  <script>
    async function submitlogin() {
      var loginField = document.getElementsByName("loginField")[0].value;
      var password = document.getElementsByName("password")[0].value;
      if (loginField == "" || password == "") {
        alert("Please fill in all fields");
        return;
      }
      var data = {
        loginField: loginField,
        password: password
      }
      var loginRes = await (await fetch('/auth/api/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      })).json();
      if (loginRes.success) {
        window.location.href = "/auth/verify?token=" + loginRes.access_token;
      } else {
        alert(loginRes.message);
      }
    }
  </script>
