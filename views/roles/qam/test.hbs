<head>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<div class="overflow-x-auto">
    <div class="float-right px-4 py-4">
      <a class="inline-block rounded border border-indigo-600 bg-indigo-600 px-8 py-2 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500"
        href="/download">
        Download
      </a>
    </div>
    <table class="table-fixed min-w-full divide-y-2 divide-gray-200 text-sm">
      <thead>
        <tr>
          <th class="px-4 py-2 text-left">
            <label for="SelectAll" class="sr-only">Select All</label>

            <input type="checkbox" id="SelectAll" class="h-5 w-5 rounded border-gray-300" onClick="toggle(this)" />
          </th>
          <th class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900">
            Idea Title
          </th>
          <th class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900">
            File idea
          </th>
          <th class="whitespace-nowrap px-4 py-2 text-left font-medium text-gray-900">
            More
          </th>
        </tr>
      </thead>

      <tbody class="divide-y divide-gray-200">
        <tr>
          <td class="px-4 py-2">
            <label class="sr-only" for="Row1">Row 1</label>
            <input class="h-5 w-5 rounded border-gray-300" type="checkbox" id="Row1" name="chooseRow" />
          </td>
          
          <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            ideaTitle1
          </td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700">*.doc</td>
          <td>
            <button id="dropbtn" onclick="show_hide()">...</button>
            <div id="list-items" style="display: none; position: absolute;" 
              class="absolute mt-2 w-56 rounded-md border border-gray-100 bg-white shadow-lg"
              role="menu">
              <div class="p-2">
                <a href="#"
                  class="block rounded-lg px-4 py-2 text-sm text-gray-500 hover:bg-gray-50 hover:text-gray-700"
                  role="menuitem">
                  .pdf
                </a>

                <a href="#"
                  class="block rounded-lg px-4 py-2 text-sm text-gray-500 hover:bg-gray-50 hover:text-gray-700"
                  role="menuitem">
                  .txt
                </a>

                <a href="#"
                  class="block rounded-lg px-4 py-2 text-sm text-gray-500 hover:bg-gray-50 hover:text-gray-700"
                  role="menuitem">
                  .doc
                </a>            
              </div>
            </div>            
          </td>
        </tr>

        <tr>
          <td class="px-4 py-2">
            <label class="sr-only" for="Row2">Row 2</label>

            <input class="h-5 w-5 rounded border-gray-300" type="checkbox" id="Row2" name="chooseRow" />
          </td>
          <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            ideaTitle
          </td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700">*.txt</td>
          <td><button>...</button></td>
        </tr>

        <tr>
          <td class="px-4 py-2">
            <label class="sr-only" for="Row3">Row 3</label>

            <input class="h-5 w-5 rounded border-gray-300" type="checkbox" id="Row3" name="chooseRow" />
          </td>
          <td class="whitespace-nowrap px-4 py-2 font-medium text-gray-900">
            ideaTitle
          </td>
          <td class="whitespace-nowrap px-4 py-2 text-gray-700">*.pdf</td>
          <td><button>...</button></td>
        </tr>
      </tbody>
    </table>
  </div>
  <script>
    //show and hide dropdown list item on button click
    function show_hide() {
      var click = document.getElementById("list-items");
      if (click.style.display === "none") {
        click.style.display = "block";
      } else {
        click.style.display = "none";
      }
    }
    function toggle(source) {
      checkboxes = document.getElementsByName("chooseRow");
      for (var i = 0, n = checkboxes.length; i < n; i++) {
        checkboxes[i].checked = source.checked;
      }
    }
  </script>