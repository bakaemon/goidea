    <div class="flex justify-center">
    <span
      class="inline-flex -space-x-px overflow-hidden rounded-md border bg-white shadow-sm"
    >
      <button id="showIdea"
        class="inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative"
      >
        Ideas
      </button>

      <button id="showPeople"
        class="inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative"
      >
        People
      </button>
    </span>
    </div>

    <div id="chartIdea">
        <canvas id="myChartIdea"></canvas>
    </div>
    <div id="chartPeople" style="display:none">
        <canvas id="myChartPeople"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const showIdeaBtn = document.querySelector('#showIdea');
        const showPeopleBtn = document.querySelector('#showPeople');

        const showChartIdea = document.querySelector('#chartIdea');
        const showChartPeople = document.querySelector('#chartPeople');

        showIdeaBtn.addEventListener('click', () => {
            showChartIdea.style.display   = 'block';
            showChartPeople.style.display   = 'none';
        })
        showPeopleBtn.addEventListener('click', () => {
            showChartIdea.style.display   = 'none';
            showChartPeople.style.display   = 'block';
        })


        const ctxIdea = document.getElementById("myChartIdea");
        const ctxPeople = document.getElementById("myChartPeople");

      new Chart(ctxPeople, {
        type: "bar",
        data: {
          labels: [
            "January",
            "Ferbuary",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December",
          ],
          datasets: [
            {
              label: "People",
              data: [10, 9, 3, 5, 2, 3, 10,15,3,5,10,5],
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      new Chart(ctxIdea, {
        type: "bar",
        data: {
          labels: [
            "January",
            "Ferbuary",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December",
          ],
          datasets: [
            {
              label: "Ides",
              data: [12, 19, 3, 5, 2, 3, 20,12,5,9,11,5],
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });
    </script>